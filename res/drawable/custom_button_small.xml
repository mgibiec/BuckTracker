<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/orange1"
                android:endColor="@color/orange2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/gray1" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/orange3"
                android:startColor="@color/red"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/gray1" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/blue2"
                android:startColor="@color/blue3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/gray1" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>        
    </item>
</selector>
